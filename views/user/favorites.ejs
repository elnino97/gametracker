<%- layout('./layouts/useraccount')%>
<section class="favorites">
  <h1 class="content-heading">My favorites</h1>
  <div class="fav-row">
    <% if (games.length) { %>
        <% for (let game of games) { %>
            <div id="game">
            <img id="game-cover" src="<%= game.background_image %> " alt="">
            <p><%= game.name %></p>
            <p><%= game.released %></p>
            </div>
        <% } %>
    <% } else { %>
        <div class="nothing-here">
            <img src="/img/cil_sad.png" alt="">
            <p>Looks like thereâ€™s nothing to see here.</p>
        </div>
    <% } %> 
    </div>  
</section>

