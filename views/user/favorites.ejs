<%- layout('./layouts/useraccount')%>
<section class="favorites">
  <h1 class="content-heading">My favorites</h1>
  <div class="fav-row">
    <% if (games.length) { %>
        <% for (let game of games) { %>
            <a href="/games/<%= game.id %> ">
                <div class="game">
                    <img class="game-cover" src="<%= game.background_image %> " alt="">
                    <p><%= game.name %></p>
                    <p><%= game.released.slice(0,4) %></p>
                </div>
            </a>
        <% } %>
        <% } else { %>
        <div class="nothing-here">
            <img src="/img/cil_sad.png" alt="">
            <p>Looks like thereâ€™s nothing to see here.</p>
        </div>
    <% } %> 
    </div>  
</section>

<script>
    const favorites = document.getElementById('nav-favorites');
    favorites.style.color = "#474787";
</script>
